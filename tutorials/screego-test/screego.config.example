# Screego 서버 설정 파일 예제
# 이 파일을 screego.config로 복사하여 사용하세요.

# 기본 서버 설정
SCREEGO_EXTERNAL_IP=localhost
SCREEGO_PORT=5050
SCREEGO_SECRET=your-super-secret-key-here

# 로깅 설정
SCREEGO_LOG_LEVEL=info  # debug, info, warn, error

# 인증 설정
SCREEGO_AUTH_MODE=turn    # turn, none
SCREEGO_USERS_FILE=/config/users
SCREEGO_CHECK_ORIGIN=true

# TURN 서버 설정 (NAT 통과용)
SCREEGO_TURN_EXTERNAL_IP=your-server-ip
SCREEGO_TURN_PORT=3478
SCREEGO_TURN_STRICT_AUTH=true
SCREEGO_TURN_USERNAME=turn-user
SCREEGO_TURN_PASSWORD=turn-password

# TLS/SSL 설정 (프로덕션 환경용)
SCREEGO_TLS_CERT_FILE=/certs/cert.pem
SCREEGO_TLS_KEY_FILE=/certs/key.pem

# CORS 설정
SCREEGO_CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://anotherdomain.com

# 방 설정
SCREEGO_ROOM_TIMEOUT=24h
SCREEGO_MAX_ROOM_SIZE=10

# 대역폭 제한 (선택사항)
SCREEGO_MAX_BITRATE=5000  # kbps
