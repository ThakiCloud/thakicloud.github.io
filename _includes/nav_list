<nav class="nav__list">
  <input id="ac-toc" name="accordion-toc" type="checkbox" />
  <label for="ac-toc">{{ site.data.ui-text[site.locale].menu_label | default: "Toggle Menu" }}</label>
  <ul class="nav__items" id="category_tag_menu">
      {% comment %} Filter posts by language for accurate counts {% endcomment %}
      {% if page.lang %}
        {% assign filtered_posts = site.posts | where: "lang", page.lang %}
        {% assign lang_prefix = '/' | append: page.lang %}
      {% else %}
        {% comment %} For Korean main site, filter by path containing _posts/ko/ {% endcomment %}
        {% assign filtered_posts = site.posts | where_exp: "post", "post.path contains '_posts/ko/'" %}
        {% assign lang_prefix = '' %}
      {% endif %}

      {% comment %} Calculate language-specific category counts {% endcomment %}
      {% assign lang_dev_count = 0 %}
      {% assign lang_owm_count = 0 %}
      {% assign lang_llmops_count = 0 %}
      {% assign lang_agentops_count = 0 %}
      {% assign lang_tutorials_count = 0 %}
      {% assign lang_careers_count = 0 %}
      {% assign lang_culture_count = 0 %}
      {% assign lang_news_count = 0 %}
      {% assign lang_research_count = 0 %}
      {% assign lang_datasets_count = 0 %}

      {% for post in filtered_posts %}
        {% if post.categories contains 'dev' %}
          {% assign lang_dev_count = lang_dev_count | plus: 1 %}
        {% endif %}
        {% if post.categories contains 'owm' %}
          {% assign lang_owm_count = lang_owm_count | plus: 1 %}
        {% endif %}
        {% if post.categories contains 'llmops' %}
          {% assign lang_llmops_count = lang_llmops_count | plus: 1 %}
        {% endif %}
        {% if post.categories contains 'agentops' %}
          {% assign lang_agentops_count = lang_agentops_count | plus: 1 %}
        {% endif %}
        {% if post.categories contains 'tutorials' %}
          {% assign lang_tutorials_count = lang_tutorials_count | plus: 1 %}
        {% endif %}
        {% if post.categories contains 'careers' %}
          {% assign lang_careers_count = lang_careers_count | plus: 1 %}
        {% endif %}
        {% if post.categories contains 'culture' %}
          {% assign lang_culture_count = lang_culture_count | plus: 1 %}
        {% endif %}
        {% if post.categories contains 'news' %}
          {% assign lang_news_count = lang_news_count | plus: 1 %}
        {% endif %}
        {% if post.categories contains 'research' %}
          {% assign lang_research_count = lang_research_count | plus: 1 %}
        {% endif %}
        {% if post.categories contains 'datasets' %}
          {% assign lang_datasets_count = lang_datasets_count | plus: 1 %}
        {% endif %}
      {% endfor %}

      <li>
        <span class="nav__sub-title" v-on:click='togglec()'>📂 Total Posts: {{ filtered_posts.size }}</span>
      </li>
      <li>
        <span class="nav__sub-title" v-on:click='togglec()'><a href="{{ lang_prefix }}/categories/dev/">🚀 DevOps ({{ lang_dev_count }})</a></span>
        <span class="nav__sub-title" v-on:click='togglec()'><a href="{{ lang_prefix }}/categories/owm/">📀 OWM ({{ lang_owm_count }})</a></span>
        <span class="nav__sub-title" v-on:click='togglec()'><a href="{{ lang_prefix }}/categories/llmops/">🤖 LLMOps ({{ lang_llmops_count }})</a></span>
        <span class="nav__sub-title" v-on:click='togglec()'><a href="{{ lang_prefix }}/categories/agentops/">🏗️ AgentOps ({{ lang_agentops_count }})</a></span>
        <span class="nav__sub-title" v-on:click='togglec()'><a href="{{ lang_prefix }}/categories/tutorials/">💻 Tutorials ({{ lang_tutorials_count }})</a></span>
        <span class="nav__sub-title" v-on:click='togglec()'><a href="{{ lang_prefix }}/categories/careers/">🤝 Careers ({{ lang_careers_count }})</a></span>
        <span class="nav__sub-title" v-on:click='togglec()'><a href="{{ lang_prefix }}/categories/culture/">🎨 Culture ({{ lang_culture_count }})</a></span>
        <span class="nav__sub-title" v-on:click='togglec()'><a href="{{ lang_prefix }}/categories/news/">🌐 News ({{ lang_news_count }})</a></span>
        <span class="nav__sub-title" v-on:click='togglec()'><a href="{{ lang_prefix }}/categories/research/">📒 Research ({{ lang_research_count }})</a></span>
        <span class="nav__sub-title" v-on:click='togglec()'><a href="{{ lang_prefix }}/categories/datasets/">☁️ Datasets ({{ lang_datasets_count }})</a></span>

